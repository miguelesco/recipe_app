<div class='recipe'>
  <div class="recipe-container">
    <div class=recipe-name">

    <ul class="list-group-horizontal">
      <%= link_to recipe.name.capitalize, recipe, class: 'recipe-title m-3' %>
        <%= link_to 'Edit', edit_recipe_path(recipe), method: :put, class: 'recipe-edit m-2' %>
        <%= link_to 'Remove', recipe, method: :delete, class: 'remove-recipe m-2' %>
    </ul>

    </div>
    <div class="recipe-info">
      <p class="recipe-description ms-5 fs-6 ">
        <%= recipe.description %>
      </p>
    </div>
  </div>
</div>
