
<table class="food-list">
  <tr>
    <th>
      Food
    </th>
    <th>
      Measurement Unit
    </th>
    <th>
      Unit Price
    </th>
    <th>
      Actions
    </th>
  </tr>
  <% @foods.each do |food| %>
    <tr>
      <td>
        <%= food.name %>
      </td>
      <td>
        <%= food.measurement_unit %>
      </td>
      <td>
        $<%= food.price %>
      </td>
      <td>
        <% if can? :delete, food %>
          <%= link_to 'Delete', food_path(food.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        <%end%>
      </td>
    </tr>
  <%end%>
</table>